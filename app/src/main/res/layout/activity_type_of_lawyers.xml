<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.TypeOfLawyersActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="50dp"
        android:background="@android:color/white">

            <include
                android:id="@+id/toolbar"
                layout="@layout/bar_layout"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="italic"
        android:gravity="center"
        android:hint="@string/type_of_lawyers"
        android:layout_marginBottom="160dp"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/editTextNameOfType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/type_of_lawyers"
        android:inputType="text"
        android:layout_margin="12dp"
        tools:ignore="Autofill" />

    <Button
        android:id="@+id/buttonAddTypeOfLawyers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/skip_button_shape"
        android:text="@string/type_of_lawyers"
        android:textColor="@android:color/white"
        android:textStyle="italic" />

    <Button
        android:id="@+id/buttonShowTypeOfLawyers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/spare_button_shape"
        android:elevation="5dp"
        android:text="@string/show_type_of_lawyers"
        android:textColor="@color/gray_my_app"
        android:textStyle="italic" />

</LinearLayout>